pipeline {
    agent none
    stages {
        stage('Test_Stage_Docker') {
            agent {
                docker { image 'webratio/httpd-with-curl' }
            }
            steps {
                sh 'ls -la'
                sh 'ss -ant | grep :80 | wc -l'
                sh 'curl http://127.0.0.1'
            }
        }
        stage('Deploy_to_DEV_server') {
            agent any

            steps {
                echo "Start of Stage Deploy"
                echo "Deploying......."
                sh 'scp -r -i "/var/lib/jenkins/jenkins_dev.pub" www/* ubuntu@172.31.27.97:/var/www/html/'
                echo "End of Stage Build"
            }
        }
    }
}