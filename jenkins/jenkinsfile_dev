pipeline {
    agent {label 'dev'}

    stages {
        stage('1-Build Docker') {
            steps {
                echo "Start of Stage Build"
                echo "Building Docker Image"
                sh '''
                sudo docker stop $(sudo docker ps -aq)
                sudo docker build -t dmalyshok/apache:v${BUILD_NUMBER} -f ./docker/Dockerfile .
                sudo docker run -d -p 8080:80 dmalyshok/apache:v${BUILD_NUMBER}
                '''
                echo "Docker"
            }
        }
        stage('2-Test Run Docker') {
            steps {
                sh '''
                export status=$(curl -o /dev/null -s -w "%{http_code}\n" http://127.0.0.1:8080)
                if [ $status -eq 200 ]
                then
                exit 0
                else
                exit 1
                fi
                '''
            }
        }
        stage('3-Deploy and Run Docker') {
            steps {
                sh '''
                sudo docker export /home/ubuntu/jenkins/apache_artifact_v${BUILD_NUMBER} dmalyshok/apache:v${BUILD_NUMBER}
                sudo chmod 777 /home/ubuntu/jenkins/apache_artifact_v${BUILD_NUMBER}
                '''
            }
        }
        stage('Upload to AWS') {
              steps {
                  withAWS(region:'eu-central-1',credentials:'aws-cred') {
                  sh 'echo "Uploading content with AWS creds"'
                      s3Upload(pathStyleAccessEnabled: true, payloadSigningEnabled: true, file: "/home/ubuntu/jenkins/apache_artifact_v${BUILD_NUMBER}", bucket:'dmitry.malyshok.org.ua')
                  }
              }
        }

    }
}